<br>
<%= form_for(@post, action_name: url, method: method_name) do %>
  <div class="form-group">
    <%= text_field_tag(:title, @post.title, placeholder: "Title....." , class: "form-control") %>
  </div>
  <div class="form-group">
    <%= text_area_tag(:content, @post.content, placeholder: "Content....." , rows: 5, class: "form-control") %>
  </div>
  <%= submit_tag(btn_name, class: "btn btn-#{btn_color}") %>
<% end %>